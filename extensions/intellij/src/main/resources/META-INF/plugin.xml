<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xiaoyucunx.continue_gs</id>
    <name>Continue</name>
    <vendor>continue-dev</vendor>
    <depends>com.intellij.modules.platform</depends>
    <idea-version since-build="223.0"/>

    <extensions defaultExtensionNs="JavaScript.JsonSchema">
        <ProviderFactory implementation="com.github.xiaoyucunx.continue_gs.continue.ConfigJsonSchemaProviderFactory"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <editorFactoryListener implementation="com.github.xiaoyucunx.continue_gs.autocomplete.AutocompleteEditorListener"/>
        <toolWindow id="Continue" anchor="right" icon="/tool-window-icon.svg"
                    factoryClass="com.github.xiaoyucunx.continue_gs.toolWindow.ContinuePluginToolWindowFactory"/>
        <projectService id="ContinuePluginService"
                        serviceImplementation="com.github.xiaoyucunx.continue_gs.services.ContinuePluginService"/>
        <projectService
                id="DiffStreamService"
                serviceImplementation="com.github.xiaoyucunx.continue_gs.editor.DiffStreamService"/>
        <projectService
                id="AutocompleteLookupListener"
                serviceImplementation="com.github.xiaoyucunx.continue_gs.autocomplete.AutocompleteLookupListener"/>
    </extensions>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity
                implementation="com.github.xiaoyucunx.continue_gs.activities.ContinuePluginStartupActivity"/>
        <applicationConfigurable
                parentId="tools"
                instance="com.github.xiaoyucunx.continue_gs.services.ContinueExtensionConfigurable"
                id="com.github.xiaoyucunx.continue_gs.services.ContinueExtensionConfigurable"
                displayName="Continue"/>
        <applicationService
                serviceImplementation="com.github.xiaoyucunx.continue_gs.services.ContinueExtensionSettings"/>
    </extensions>

    <actions>
        <action class="com.github.xiaoyucunx.continue_gs.editor.InlineEditAction"
                id="continue.inlineEdit"
                description="Inline Edit"
                text="Inline Edit">
            <keyboard-shortcut keymap="$default"
                               first-keystroke="ctrl I"/>
            <keyboard-shortcut keymap="Mac OS X"
                               first-keystroke="meta I"/>
        </action>

        <action class="com.github.xiaoyucunx.continue_gs.editor.ToggleInlineEditAction"
                id="continue.toggleInlineEdit"
                description="Toggle Inline Edit"
                text="Toggle Inline Edit">
            <keyboard-shortcut keymap="$default"
                               first-keystroke="ctrl shift I"/>
            <keyboard-shortcut keymap="Mac OS X"
                               first-keystroke="meta shift I"/>
        </action>

        <action id="continue.acceptDiff"
                class="com.github.xiaoyucunx.continue_gs.actions.AcceptDiffAction"
                text="Accept Diff" description="Accept Diff">
            <keyboard-shortcut keymap="$default"
                               first-keystroke="alt shift Y"/>
            <keyboard-shortcut keymap="Mac OS X"
                               first-keystroke="alt shift Y"/>
        </action>
        <action id="continue.rejectDiff"
                class="com.github.xiaoyucunx.continue_gs.actions.RejectDiffAction"
                text="Reject Diff" description="Reject Diff">
            <keyboard-shortcut keymap="$default"
                               first-keystroke="alt shift N"/>
            <keyboard-shortcut keymap="Mac OS X"
                               first-keystroke="alt shift N"/>
        </action>
        <action id="continue.quickTextEntry"
                class="com.github.xiaoyucunx.continue_gs.actions.QuickTextEntryAction"
                text="Quick Text Entry" description="Quick Text Entry">
            <keyboard-shortcut keymap="$default"
                               first-keystroke="alt shift J"/>
            <keyboard-shortcut keymap="Mac OS X"
                               first-keystroke="alt shift J"/>
        </action>
        <action id="continue.viewLogs"
                class="com.github.xiaoyucunx.continue_gs.actions.ViewLogsAction"
                text="View Continue Server Logs"
                description="View Continue Server Logs">
            <!-- No shortcut defined -->
        </action>
        <action id="continue.toggleAuxiliaryBar"
                class="com.github.xiaoyucunx.continue_gs.actions.ToggleAuxiliaryBarAction"
                text="Toggle Right Sidebar" description="Toggle Right Sidebar">
            <keyboard-shortcut keymap="$default" first-keystroke="alt ctrl J"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="alt meta J"/>
        </action>
        <action id="continue.focusContinueInputWithoutClear"
                class="com.github.xiaoyucunx.continue_gs.actions.FocusContinueInputWithoutClearAction"
                text="Add selected code to context"
                description="Focus Continue Input With Edit">
            <keyboard-shortcut keymap="$default"
                               first-keystroke="ctrl shift J"/>
            <keyboard-shortcut keymap="Mac OS X"
                               first-keystroke="meta shift J"/>
        </action>

<!--        <action id="InsertLiveTemplate" class="com.intellij.openapi.actionSystem.EmptyAction" />-->
<!--        <action id="SurroundWithLiveTemplate" class="com.intellij.openapi.actionSystem.EmptyAction"/>-->

        <action id="continue.newContinueSession"
                class="com.github.xiaoyucunx.continue_gs.actions.NewContinueSessionAction"
                text="Start New Continue Session"
                icon="AllIcons.General.Add"
                description="Start New Continue Session">
            <keyboard-shortcut keymap="$default"
                               first-keystroke="alt ctrl N"/>
            <keyboard-shortcut keymap="Mac OS X"
                               first-keystroke="alt meta N"/>
        </action>

        <action id="continue.viewHistory"
                class="com.github.xiaoyucunx.continue_gs.actions.ViewHistoryAction"
                text="View History"
                icon="AllIcons.Vcs.History"
                description="View History">
        </action>
        <action id="continue.focusContinueInput"
                class="com.github.xiaoyucunx.continue_gs.actions.FocusContinueInputAction"
                text="Add selected code to context"
                description="Focus Continue Input">
            <keyboard-shortcut keymap="$default"
                               first-keystroke="ctrl J"/>
            <keyboard-shortcut keymap="Mac OS X"
                               first-keystroke="meta J"/>
            <add-to-group group-id="EditorPopupMenu"/>
        </action>

        <group id="ContinueSidebarActionsGroup">
            <reference ref="continue.newContinueSession"/>
            <reference ref="continue.viewHistory"/>
        </group>

        <action id="com.github.xiaoyucunx.continue_gs.autocomplete.AcceptAutocompleteAction"
                class="com.github.xiaoyucunx.continue_gs.autocomplete.AcceptAutocompleteAction"
                text="Accept Autocomplete Suggestion" description="Accept Autocomplete Suggestion">
            <keyboard-shortcut keymap="$default" first-keystroke="TAB"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="TAB"/>
        </action>
        <action id="com.github.xiaoyucunx.continue_gs.autocomplete.CancelAutocompleteAction"
                class="com.github.xiaoyucunx.continue_gs.autocomplete.CancelAutocompleteAction"
                text="Cancel Autocomplete Suggestion" description="Cancel Autocomplete Suggestion">
            <keyboard-shortcut keymap="$default" first-keystroke="ESCAPE"/>
        </action>
    </actions>


</idea-plugin>
